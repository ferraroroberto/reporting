{
    "linkedin_profile": {
        "fields": {
            "num_followers": {
                "path": "data.data.follower_count",
                "type": "integer",
                "required": true
            }
        }
    },
    "linkedin_posts": {
        "type": "array",
        "array_path": "data.data",
        "fields": {
            "post_id": {
                "path": "post_url",
                "type": "string",
                "required": true
            },
            "posted_at": {
                "path": "posted",
                "type": "string",
                "required": true
            },
            "is_video": {
                "path": "video",
                "type": "boolean_exists",
                "required": false
            },
            "num_likes": {
                "path": "num_reactions",
                "type": "integer",
                "required": true
            },
            "num_comments": {
                "path": "num_comments",
                "type": "integer",
                "required": true
            },
            "num_reshares": {
                "path": "num_reposts",
                "type": "integer",
                "required": true
            }                       
        }
    },
    "instagram_profile": {
        "fields": {
            "num_followers": {
                "path": "data.edge_followed_by.count",
                "type": "integer",
                "required": true
            }
        }
    },
    "instagram_posts": {
        "type": "array",
        "array_path": "data.items",
        "fields": {
            "post_id": {
                "path": "code",
                "type": "string",
                "required": true
            },
            "posted_at": {
                "path": "taken_at",
                "type": "integer",
                "required": true
            },
            "is_video": {
                "path": "media_type",
                "type": "custom",
                "transform": "value == 2",
                "required": true
            },            
            "num_likes": {
                "path": "like_count",
                "type": "integer",
                "required": true
            },
            "num_comments": {
                "path": "comment_count",
                "type": "integer",
                "required": true
            }        
        }
    },
    "threads_profile": {
        "fields": {
            "num_followers": {
                "path": "data.data.user.follower_count",
                "type": "integer",
                "required": true
            }
        }
    },
    "threads_posts": {
        "type": "array",
        "array_path": "data.data.posts",
        "fields": {
            "post_id": {
                "path": "node.thread_items.0.post.code",
                "type": "string",
                "required": true
            },
            "posted_at": {
                "path": "node.thread_items.0.post.taken_at",
                "type": "integer",
                "required": true
            },
            "is_video": {
                "path": "node.thread_items.0.post.media_type",
                "type": "custom",
                "transform": "value == 2",
                "required": true
            },            
            "num_likes": {
                "path": "node.thread_items.0.post.like_count",
                "type": "integer",
                "required": true
            },
            "num_comments": {
                "path": "node.thread_items.0.post.text_post_app_info.direct_reply_count",
                "type": "integer",
                "required": true
            },
            "num_reshares": {
                "path": "node.thread_items.0.post.text_post_app_info.repost_count",
                "type": "integer",
                "required": true
            }
        }
    },
    "twitter_profile": {
        "fields": {
            "num_followers": {
                "path": "data.result.data.user.result.legacy.followers_count",
                "type": "integer",
                "required": true
            }
        }
    },
    "twitter_posts": {
        "type": "array",
        "array_path": "data.result.timeline.instructions",
        "find_array": {
            "type": "TimelineAddEntries",
            "entries_path": "entries"
        },
        "fields": {
            "post_id": {
                "path": "content.itemContent.tweet_results.result.rest_id",
                "type": "string",
                "required": true
            },
            "posted_at": {
                "path": "content.itemContent.tweet_results.result.legacy.created_at",
                "type": "string",
                "required": true
            },
            "is_video": {
                "path": "content.itemContent.tweet_results.result.legacy.extended_entities.media.0.type",
                "type": "custom",
                "transform": "value == 'video'",
                "required": false
            },
            "num_likes": {
                "path": "content.itemContent.tweet_results.result.legacy.favorite_count",
                "type": "integer",
                "required": true
            },
            "num_comments": {
                "path": "content.itemContent.tweet_results.result.legacy.reply_count",
                "type": "integer",
                "required": true
            },
            "num_reshares": {
                "path": "content.itemContent.tweet_results.result.legacy.retweet_count",
                "type": "integer",
                "required": true
            }
        }
    },
    "substack_profile": {
        "fields": {
            "num_subscribers": {
                "path": "data.data.subscriberCountNumber",
                "type": "integer",
                "required": true
            }
        }
    },
    "substack_posts": {
        "type": "array",
        "array_path": "data.data.items",
        "fields": {
            "post_id": {
                "path": "entity_key",
                "type": "string",
                "required": true
            },
            "posted_at": {
                "path": "comment.date",
                "type": "string",
                "required": true
            },
            "is_video": {
                "path": "comment.media_clip_id",
                "type": "custom",
                "transform": "value != None",
                "required": false
            },
            "num_likes": {
                "path": "comment.reaction_count",
                "type": "integer",
                "required": true
            },
            "num_comments": {
                "path": "comment.children_count",
                "type": "integer",
                "required": true
            },
            "num_reshares": {
                "path": "comment.restacks",
                "type": "integer",
                "required": true
            }
        }
    }
}
